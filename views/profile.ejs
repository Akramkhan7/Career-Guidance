        }

        .assessment-box .desc {
            font-weight: 400;
            font-size: 0.85rem;
            color: #616480;
            max-width: 70%;
        }

        .assessment-status .label {
            background-color: #22283e;
            color: #616480;
            font-size: 0.75rem;
            padding: 2px 8px;
            border-radius: 20px;
