        }

        /* Purple button at bottom */
        .start-assessments-btn {
            background: linear-gradient(90deg, #7d5fff, #a9a1ff);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 700;
            font-size: 1rem;
            width: 100%;
            padding: 1rem 0;
            margin-top: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .start-assessments-btn:hover {
            background-color: #6e54f7;
        }

        /* Footer */
        footer {
            background: #121826;
            padding: 1rem 5%;
            text-align: center;
            font-size: 0.8rem;
            color: #616480;
            user-select: none;
